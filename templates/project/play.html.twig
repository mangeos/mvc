			<div class="card">
				<h2>Starta Spel</h2>
				<div class="fakeimg">
				<div class="form">
					<form method="POST" action={{asset('./proj/playpoker')}}>
						<label for="fname">Player Name</label>
						<input required type="text" id="fname" name="fname" placeholder="Player Name..">
						<input type="submit" value="Starta Spelet">

					</form>
				</div>

				</div>
				
			</div>
			
		</div>
	</div>

	<div class="footer">
		<h2>Footer</h2>
	</div>

